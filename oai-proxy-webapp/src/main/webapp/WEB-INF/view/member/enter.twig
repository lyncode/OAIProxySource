{% extends '../layout.twig' %}
{% block content %}
	<div class="row-fluid">
		<div class="span6">
			<form class="form-signin" action="{{ path '/j_spring_security_check' }}" method="POST">
		        <h2 class="form-signin-heading">Sign in</h2>
		        <input name="j_username" type="text" class="input-block-level" placeholder="Email address">
		        <input name="j_password" type="password" class="input-block-level" placeholder="Password">
		        <button class="btn btn-large btn-primary" type="submit">Sign in</button>
		        <a class="right-to-large-button" href="{{ path '/resetpassword' }}">Lost Password?</a>
		        <div class="clear"></div>
		    </form>
    	</div>
    	<div class="span6">
			<form class="form-signin" method="POST" action="{{ path '/register' }}" method="POST">
		        <h2 class="form-signin-heading">Register</h2>
		        <input name="email" type="text" class="input-block-level" placeholder="Email address">
		        <input name="pwd" type="password" class="input-block-level" placeholder="Password">
		        <input name="pwda" type="password" class="input-block-level" placeholder="Password Again">
		        <button class="btn btn-large btn-success" type="submit">Register</button>
		    </form>
    	</div>
    </div>
{% endblock %}
